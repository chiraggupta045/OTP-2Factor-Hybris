<items 	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
			xsi:noNamespaceSchemaLocation="items.xsd">

	<enumtypes>
		<enumtype generate="true" code="AuthenticationType" autocreate="true">
			<value code="GOOGLE_AUTHENTICATION" />
			<value code="OTP" />
		</enumtype>
	</enumtypes>


	<itemtypes>
		<itemtype code="User" autocreate="false" generate="false">
			<attributes>
				<attribute type="java.lang.String" qualifier="secretKeyForOTP" generate="true">
					<modifiers read="true" write="true" optional="false" />
					<persistence type="property" />
				</attribute>				
				<attribute type="boolean" qualifier="isEnabledTwoFactorAuthentication" generate="true">
					<modifiers read="true" write="true" optional="false" />				
					<persistence type="property" />
				</attribute>						
			</attributes>
		</itemtype>

		<itemtype code="BaseStore" autocreate="false" generate="false">

			<attributes>
				<attribute type="AuthenticationType" qualifier="typeOfAuthentication" generate="true">
					<modifiers read="true" write="true" optional="false" />
					<persistence type="property" />
				</attribute>
			</attributes>
		</itemtype>
		
		
	</itemtypes>
</items>
